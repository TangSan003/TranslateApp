<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ImageActivity"
    android:background="@color/blue">

    <LinearLayout
        android:id="@+id/layout_text_recognition"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_above="@+id/layout_textView_tab"
        android:visibility="visible"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Image"
                android:textSize="40dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/button_upload_image_text_recognition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click Upload Image"
            android:textSize="15dp"
            android:layout_marginBottom="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/backgound_icon_voice">
                <ImageView
                    android:id="@+id/image_text_recognition"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@drawable/ic_image"
                    android:backgroundTint="@color/blue"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Sửa văn bản:"
            android:textSize="22dp"
            android:layout_marginTop="10dp"
            android:background="@color/white">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_text_langue_translate"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:textSize="22dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:inputType="textMultiLine|textNoSuggestions"/>
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Result: "
            android:textSize="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/result_translate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Translator..."
                android:textSize="20dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="15dp"
            android:gravity="center">

            <Button
                android:id="@+id/button_translate_english"
                android:layout_width="170dp"
                android:layout_height="match_parent"
                android:text="English"
                android:textSize="20dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:background="@drawable/backspace_24" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:background="@drawable/arrow_right_alt"/>
            </LinearLayout>

            <Button
                android:id="@+id/button_translate_tieng_viet"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Tiếng Việt"
                android:textSize="20dp"/>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_textView_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="@color/backgound_icon_voice"
        android:gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">
        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@color/white">
            <TextView
                android:id="@+id/textView_tab_translate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Translate"
                android:textSize="16dp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/textView_tab_voice"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/ic_voice"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@color/white">
            <TextView
                android:id="@+id/textView_tab_text_recognition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Image"
                android:textColor="@color/red"
                android:textSize="16dp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>